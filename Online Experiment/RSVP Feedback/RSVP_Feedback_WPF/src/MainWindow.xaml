<Window x:Class="RSVP_Feedback_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RSVP-Feedback" Height="920" Width="1800" WindowStyle="SingleBorderWindow" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Height="900" Width="1800" Name="grid1">
        <StackPanel Height="430" HorizontalAlignment="Left" Name="targetPanel" VerticalAlignment="Top" Width="1800" Background="#FFCB9797">
            <StackPanel Height="215" Name="stackPanel1" Width="1500" Orientation="Horizontal" />
            <StackPanel Height="215" Name="stackPanel2" Width="1500" Orientation="Horizontal" />
        </StackPanel>

        <StackPanel Height="430" HorizontalAlignment="Left" Name="nonTargetPanel" VerticalAlignment="Bottom" Width="1800" Background="#FFB0CBA9" >
            <StackPanel Height="215" Name="stackPanel3" Width="1500" Orientation="Horizontal" />
            <StackPanel Height="215" Name="stackPanel4" Width="1500" Orientation="Horizontal" />
        </StackPanel>
        <Label x:Name="label1" Content="Total Accuracy (Pi) = " HorizontalAlignment="Left" Margin="1050,430,0,0" VerticalAlignment="Top" Height="40" Width="391" FontSize="24"/>
        <Label x:Name="label2" Content="Run Accuracy (Pi) = " HorizontalAlignment="Left" Margin="500,430,0,0" VerticalAlignment="Top" Height="40" Width="391" FontSize="24"/>
    </Grid>
</Window>
